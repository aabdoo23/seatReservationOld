<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainPanel" prefHeight="386.0" prefWidth="805.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.seatreservation.NewTicketController">
   <children>
      <Label layoutX="14.0" layoutY="18.0" text="Ticket ID:" />
      <TextField fx:id="tfID" layoutX="91.0" layoutY="14.0" />
      <AnchorPane fx:id="moviePane" layoutX="14.0" layoutY="55.0" prefHeight="296.0" prefWidth="439.0">
         <children>
            <Label fx:id="lbMovieName" layoutX="15.0" layoutY="14.0" text="movie name">
               <font>
                  <Font size="19.0" />
               </font></Label>
            <ImageView fx:id="ivPoster" fitHeight="233.0" fitWidth="185.0" layoutX="15.0" layoutY="54.0" pickOnBounds="true" preserveRatio="true" />
            <DatePicker fx:id="dpDate" layoutX="218.0" layoutY="54.0" />
            <ChoiceBox fx:id="cbParties" layoutX="218.0" layoutY="91.0" prefWidth="150.0" />
            <Button fx:id="selectBTN" layoutX="380.0" layoutY="91.0" mnemonicParsing="false" onAction="#chooseParty" text="Select" />
            <Spinner fx:id="numberOfSeatsSpinner" layoutX="218.0" layoutY="158.0" />
            <Label layoutX="218.0" layoutY="130.0" text="Number of seats" />
         </children>
      </AnchorPane>
      <Label fx:id="lbMoney" layoutX="14.0" layoutY="349.0" text="total money">
         <font>
            <Font size="24.0" />
         </font></Label>
      <Button fx:id="confirmBTN" layoutX="211.0" layoutY="354.0" mnemonicParsing="false" onAction="#save" text="Confirm" />
      <VBox fx:id="seatsPane" layoutX="453.0" layoutY="32.0" prefHeight="354.0" prefWidth="387.0" />
      <Label layoutX="453.0" layoutY="9.0" text="Seats overview:" />
   </children>
</AnchorPane>
